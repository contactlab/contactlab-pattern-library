{
  "name": "contactclab-ui-components",
  "version": "1.0.4",
  "description": "Polymer UI components of the CLAB Pattern Library",
  "main": "index.js",
  "config": {
    "port": {
      "dev": 3000
    }
  },
  "scripts": {
    "start": "http-server ./../ -s -p $npm_package_config_port_dev",
    "dev": "webpack --progress --colors --watch & http-server ./../ -s -p $npm_package_config_port_dev",
    "prebuild": "node -e 'require(\"./webpack\").fullWebpack()'",
    "build": "node -e 'require(\"./build\").run()'",
    "postbuild": "node -e 'require(\"./build\").vulcanize()'",
    "prebuild:single": "node -e 'require(\"./webpack\").singleWebpack()'",
    "build:single": "node -e 'require(\"./build\").run(true)'",
    "postbuild:single": "node -e 'require(\"./build\").vulcanize(true)'",
    "test": "wct",
    "test:p": "wct -p"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/contactlab/contactlab-ui-components"
  },
  "author": "ContactLab Product Team",
  "license": "Apache-2.0",
  "homepage": "https://github.com/contactlab/contactlab-ui-components#readme",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.18.0",
    "colors": "^1.1.2",
    "faker": "^3.0.1",
    "fs-extra": "^1.0.0",
    "node-minify": "^2.0.0",
    "replace-in-file": "^2.0.1",
    "strip-loader": "^0.1.2",
    "vulcanize": "^1.14.8",
    "web-component-tester": "^5.0.0",
    "webpack": "^1.13.3"
  },
  "dependencies": {
    "http-server": "^0.9.0"
  }
}
